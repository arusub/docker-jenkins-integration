pipeline{
    agent any
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                echo $PATH
                git credentialsId: 'github', url: 'https://github.com/arusub/demo'
                //echo "Test gradle jenkins"
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
            }
        }
    }
}
